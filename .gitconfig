[user]
	name = Joseph H Kennedy
	email = kennedyjh@ornl.gov
[push]
	default = simple
[ui]
    color = true
[alias]
    tree = log --graph --decorate --pretty=oneline --abbrev-commit --author-date-order
    author = log --graph --decorate --pretty=short --abbrev-commit --author-date-order
    up = fetch --all -p
    ff = pull --ff-only
[merge]
    summary = true
    ff = false
[core]
    autocrlf = input
    whitespace = trailing-space
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
