[user]
	name = Joseph H Kennedy
	email = me@jhkennedy.org
	signingkey = 175B91504A99C555
[push]
	default = simple
[ui]
    color = true
[alias]
    tree = log --graph --decorate --pretty=oneline --abbrev-commit --author-date-order
    author = log --graph --decorate --pretty=short --abbrev-commit --author-date-order
    up = fetch --all -p
    ff = pull --ff-only
    subup = !git submodule sync && git submodule update --init
    dev = !git switch develop && git up && git ff
[merge]
    summary = true
    ff = false
[core]
    autocrlf = input
    whitespace = trailing-space
	excludesfile = /home/jhkennedy/.gitignore_global
	editor = vim
    trustctime = false
    pager = less -F -X 
[diff]
	tool = meld
[difftool]
	prompt = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	gpgsign = true
